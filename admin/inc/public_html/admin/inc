<script>
	$('#remForm').submit(function(e){
		e.preventDefault();
		if (!confirm("Esta seguro de que desea bloquear esta fecha?")) 
			{	return false; }
		else { 
    		var data = new FormData(this);
    		$.ajax({
    			type: 'POST',
    			url: $(this).attr('action'),
    			data: data,
    			contentType: false,
    			cache: false,
    			dataType: "json",
    			processData: false,
    			success: function(data){
    				if (data.success){
        			    alert('Fecha bloqueada correctamente');

        			}else{
        				alert('Error '+data.error);	
        			}
    			}          
    		});
    	}
    				
    });

</script>